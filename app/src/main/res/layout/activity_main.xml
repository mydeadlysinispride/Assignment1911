<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Nhập Thông Tin"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Họ và Tên(*)"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="75dp" />

        <EditText
            android:id="@+id/edit_mssv"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="MSSV(*)"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="134dp" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Ngày sinh(*)"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="195dp" />

        <EditText
            android:id="@+id/edit_sex"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Giới tính"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="253dp" />

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Địa chỉ liên lạc"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="315dp" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Số điện thoại(*)"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="375dp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="331dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Email(*)"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="436dp" />

        <CheckBox
            android:id="@+id/check_sport"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:text="Thể Thao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHobby" />

        <CheckBox
            android:id="@+id/check_travel"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:text="Du lịch"
            app:layout_constraintEnd_toStartOf="@+id/check_sport"
            app:layout_constraintHorizontal_bias="0.563"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHobby" />

        <CheckBox
            android:id="@+id/check_music"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:text="Âm nhạc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check_sport"
            app:layout_constraintTop_toBottomOf="@+id/textHobby" />

        <TextView
            android:id="@+id/textHobby"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:text="Sở Thích"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="502dp" />

        <CheckBox
            android:id="@+id/check_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý điều khoản sử dụng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="605dp" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
        
</ScrollView>